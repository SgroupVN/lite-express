{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "lib": [
      "es7"
    ],
    "paths": {
      "@sgroup/core": [
        "./packages/core"
      ],
      "@sgroup/core/*": [
        "./packages/core/*"
      ],
      "@sgroup/swagger": [
        "./packages/swagger"
      ],
      "@sgroup/swagger/*": [
        "./packages/swagger/*"
      ]
    }
  },
  "include": [
    "packages/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
